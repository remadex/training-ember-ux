{{page-title "Favorites"}}
<div class="w-128">
  {{#if this.model.length}}
    {{#each this.model as |song|}}
      <div class="flex justify-between">
        <div class="flex items-center">
          <button type="button" {{on "click" (fn this.deleteFavorite song)}}>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" class="fill-current text-red-500 mx-2 w-4">
              <path d="M2.93 17.07A10 10 0 1 1 17.07 2.93 10 10 0 0 1 2.93 17.07zm1.41-1.41A8 8 0 1 0 15.66 4.34 8 8 0 0 0 4.34 15.66zm9.9-8.49L11.41 10l2.83 2.83-1.41 1.41L10 11.41l-2.83 2.83-1.41-1.41L8.59 10 5.76 7.17l1.41-1.41L10 8.59l2.83-2.83 1.41 1.41z"/>
            </svg>
          </button>
          {{song.title}} <span class="text-teal-200 text-sm ml-1">by {{get song.band "name"}}</span>
        </div>  
        <span>{{song.rating}}</span>
      </div>
    {{/each}}
  {{else}}
    <h2 class="text-center mb-16">Aucun favori n'a été sélectionné.</h2>
    <LinkTo @route="songs" class="text-sm">
      Retourner sur la liste des musiques
    </LinkTo>
  {{/if}}
</div>